                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="Guitar" Template="{StaticResource TabItemTemplate}">
                        <WrapPanel>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="Guitar1" Click="Button_Click2" Tag="0"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="Guitar2" Click="Button_Click2" Tag="1"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="Guitar3" Click="Button_Click2" Tag="2"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="Guitar4" Click="Button_Click2" Tag="3"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="Guitar5" Click="Button_Click2" Tag="4"/>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="HipHop" Template="{StaticResource TabItemTemplate}">
                        <WrapPanel>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop1" Click="Button_Click3" Tag="0"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop2" Click="Button_Click3" Tag="1"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop3" Click="Button_Click3" Tag="2"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop4" Click="Button_Click3" Tag="3"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop5" Click="Button_Click3" Tag="4"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop6" Click="Button_Click3" Tag="5"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop7" Click="Button_Click3" Tag="6"/>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="10 0 0 0" Content="HipHop8" Click="Button_Click3" Tag="7"/>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="Reggae" Template="{StaticResource TabItemTemplate}"/>
                    <TabItem Header="Trap" Template="{StaticResource TabItemTemplate}"/>
                </TabControl>
            </WrapPanel>
            <WrapPanel>

            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
