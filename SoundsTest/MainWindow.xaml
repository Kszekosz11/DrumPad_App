            <Border x:Name="contentPresenterBorder" BorderBrush="Gainsboro" BorderThickness="1,1,1,0" Padding="9" Margin="2,0" CornerRadius="4,4,0,0">
                <ContentPresenter ContentSource="Header"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Border.BorderThickness" Value="3,3,3,0" TargetName="contentPresenterBorder"/>
