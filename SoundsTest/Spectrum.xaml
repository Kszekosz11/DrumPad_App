        <ProgressBar x:Name="Bar05" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar06" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar07" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar08" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar09" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
