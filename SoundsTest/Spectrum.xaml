        <ProgressBar x:Name="Bar14" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar15" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
        <ProgressBar x:Name="Bar16" Height="20" Margin="5,0" Minimum="0" Maximum="255" Value="0" Foreground="{Binding RelativeSource={RelativeSource Self}, Path=Value, Converter={StaticResource SpectrumValueToBackgroudConverter}}"/>
    </StackPanel>
</UserControl>